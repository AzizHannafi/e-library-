{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ book.author }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ book.published ? book.published|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}">back to list</a>

    {% if "ROLE_ADMIN" in app.user.roles  %}
        <a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>
    {% endif %}
    {% if "ROLE_ADMIN" in app.user.roles  %}
        {{ include('book/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
